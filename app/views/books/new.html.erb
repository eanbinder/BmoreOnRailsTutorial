<%= form_for(@book) do |f| %>
<%# this one line creates a form that is submitted as a PATCH/PUT request to the app's server%->
    <ul>
        <li>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </li>
        <li>
            <%= f.label :author %>
            <%= f.text_field :author %>
        </li>
        <li>
            <%= f.label :price_cents %>
            <%= f.number_field :price_cents %>
        </li>
        <li>
            <%= f.label :quantity %>
            <%= f.number_field :quantity %>
            </li>
        <li>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </li>
    </ul>
<%= f.submit(class: "button") %>

<% end %>