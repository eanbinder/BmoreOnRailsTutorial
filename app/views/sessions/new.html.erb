<%= form_for(:session, url: session_path) do |f| %>
    <ul>
      <li>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </li>

      <li>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </li>
    </ul>
    <%= f.submit("Login", class: "button") %>
<% end %>